{
  "name": "template-react",
  "description": "Monorepo template for web apps",
  "version": "3.0.0",
  "license": "MIT",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "repository": "https://github.com/kporten/template-react",
  "bugs": "https://github.com/kporten/template-react/issues",
  "private": true,
  "engines": {
    "node": ">=16.14.0"
  },
  "packageManager": "pnpm@6.32.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write --ignore-unknown .",
    "changeset": "changeset add",
    "release": "changeset version && changeset tag",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^16.11.26",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "turbo": "^1.1.6",
    "typescript": "^4.6.2"
  }
}
