{
  "name": "template-react",
  "description": "Monorepo template for web apps",
  "version": "3.1.3",
  "license": "MIT",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "repository": "https://github.com/kporten/template-react",
  "bugs": "https://github.com/kporten/template-react/issues",
  "private": true,
  "engines": {
    "node": ">=16.15.0"
  },
  "packageManager": "pnpm@7.2.1",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write --ignore-unknown .",
    "changeset": "changeset add",
    "release": "changeset version && changeset tag",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "^1.2.16"
  }
}
