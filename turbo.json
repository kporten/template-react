{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["^build", "generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**", ".next/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build", "generate"]
    },
    "test": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["**/*.tsx", "**/*.ts"],
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "dependsOn": ["^build", "generate"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build", "generate"],
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "generate": {
      "cache": false
    },
    "intl": {
      "inputs": ["**/*.tsx", "**/*.ts"],
      "outputs": ["src/messages/*.json"]
    },
    "//#format": {},
    "//#format:check": {}
  }
}
